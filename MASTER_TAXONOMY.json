  "mapping_rules": {
    "priority_order": [
      "1. Check cross-cutting topics first (Research, Biostat, Ethics, etc.)",
      "2. Then check subject-specific topics",
      "3. Use exact match when possible",
      "4. Use semantic similarity for fuzzy matches",
      "5. Confidence score must be >= 0.7 to accept mapping"
    ],
    "conflict_resolution": [
      "If question fits both cross-cutting and subject-specific, prefer cross-cutting",
      "If multiple subject topics match, choose most specific one",
      "Never create new topics - only map to existing taxonomy"
    ]
  }
